{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "roots": ["./test/e2e"],
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "globals": {
        "__PATH_PREFIX__": "",
        "ts-jest": {
            "diagnostics": false
        }
    },
    "moduleNameMapper": {
        "^@app/(.*)$": "<rootDir>/src/$1",
        "^@test/(.*)$": "<rootDir>/test/$1"
    }
}
